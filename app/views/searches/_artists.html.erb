<h1 class="center results-header">Artists</h1>
<div class="artists pure-g">
  <% @artists.each_slice(3) do |row| %>
    <% row.each do |artist| %>
      <div class="pure-u-1-3">
        <%= link_to(artist_image(artist.images, artist.name), '#') %>
        <p>
        <%= fa_icon 'user', class: 'results-icon' %>
        <%= link_to artist.name, '#', class: 'pure-button results-info' %>
        </p>
        <p class="results-icon"><%= popularity_stars(artist.popularity) %></p>
      </div>
    <% end %>
  <% end %>
</div>
