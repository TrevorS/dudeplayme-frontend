<h1 class="center results-header">Albums</h1>
<div class="albums pure-g">
  <% @albums.each_slice(3) do |row| %>
    <% row.each do |album| %>
      <div class="pure-u-1-3">
        <%= link_to(image_tag(album.images[1]['url'], alt: album.name, height: 300, width: 300, class: 'results-img'), album_path(album.id)) %>
        <p>
        <%= fa_icon 'music', class: 'results-icon' %>
        <%= link_to album.name, album_path(album.id), class: 'pure-button results-info' %></p>
        <p>
        <%= fa_icon 'user', class: 'results-icon' %>
        <%= album.artists.map { |a| link_to(a.name, '#', class: 'pure-button results-info') }.join(', ').html_safe %>
        </p>
        <p class="results-icon"><%= popularity_stars(album.popularity) %></p>
      </div>
    <% end %>
  <% end %>
</div>
